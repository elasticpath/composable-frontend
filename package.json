{
  "name": "@elasticpath/mason",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "generate": "turbo run generate --parallel --filter=!@elasticpath/mason-common",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "deploy": "turbo run deploy",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "examples": "turbo run build --filter=@elasticpath/mason-cli... && yarn run scaffold:local",
    "scaffold:local": "yarn scaffold:setup && concurrently \"yarn:scaffold:local:*\"",
    "scaffold:setup": "mkdir -p examples && cd ./examples && rimraf ./*",
    "scaffold:local:simple": "cd ./examples && dotenv -e ../.env.examples -- bash -c 'node ../packages/mason-cli/dist/bin/mason.js ../packages/d2c-schematics/dist:d2c --dry-run=false --skip-install=true --skip-git=true --interactive=false --epcc-client-id=$EPCC_CLIENT_ID --epcc-client-secret=$EPCC_CLIENT_SECRET --epcc-endpoint-url=$EPCC_ENDPOINT --plp-type=None --payment-gateway-type=\"EP Payments\" --ep-payments-stripe-account-id=abc123 --ep-payments-stripe-publishable-key=abc123 basic'",
    "scaffold:local:algolia": "cd ./examples && dotenv -e ../.env.examples -- bash -c 'node ../packages/mason-cli/dist/bin/mason.js ../packages/d2c-schematics/dist:d2c --dry-run=false --skip-install=true --skip-git=true --skip-config=true --interactive=false --epcc-client-id=$EPCC_CLIENT_ID --epcc-client-secret=$EPCC_CLIENT_SECRET --epcc-endpoint-url=$EPCC_ENDPOINT --plp-type=Algolia --algolia-application-id=$ALGOLIA_APP_ID --algolia-admin-api-key=$ALGOLIA_ADMIN_API_KEY --algolia-search-only-api-key=$ALGOLIA_SEARCH_ONLY_API_KEY algolia'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.1",
    "@playwright/test": "^1.28.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^7.1.0",
    "eslint-config-custom": "*",
    "mkdirp": "^2.1.5",
    "prettier": "latest",
    "quicktype-core": "^6.1.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.18"
}
