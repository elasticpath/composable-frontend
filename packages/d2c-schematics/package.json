{
  "name": "@elasticpath/d2c-schematics",
  "version": "0.6.1",
  "description": "D2C Storefront Schematics for Elastic Path Commerce Cloud",
  "repository": {
    "type": "git",
    "directory": "packages/schematics"
  },
  "scripts": {
    "build": "rimraf ./dist/ && yarn build:schema:types && tsup",
    "build:schema:types": "ts-node ../../scripts/json-schema-to-dts.ts './**/schema.json' './dist'",
    "generate": "yarn gen:schema",
    "gen:schema": "ts-node ../../bin/script-runner.js build-schema.ts",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "schematics": "./collection.json",
  "dependencies": {
    "@angular-devkit/core": "^14.1.0",
    "@angular-devkit/schematics": "^14.1.0",
    "@elasticpath/mason-common": "0.1.4",
    "@elasticpath/mason-integration-hub-deployer": "0.1.4",
    "@moltin/sdk": "^20.16.0",
    "@trpc/client": "^10.14.1",
    "algoliasearch": "^4.15.0",
    "ansi-colors": "4.1.3",
    "glob": "^8.0.3",
    "inquirer": "8.2.4",
    "minimatch": "^5.1.0",
    "symbol-observable": "4.0.0",
    "typescript": "^4.7.4",
    "uuid": "^9.0.0",
    "ws": "^8.12.1",
    "yargs-parser": "21.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.1",
    "@graphql-codegen/client-preset": "^2.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^29.1.2",
    "@types/minimatch": "^5.1.2",
    "@types/uuid": "^9.0.1",
    "@types/yargs-parser": "^21.0.0",
    "@urql/core": "^3.1.1",
    "@vercel/ncc": "^0.34.0",
    "esbuild-plugin-copy": "^2.1.0",
    "fs-extra": "^10.1.0",
    "graphql": "^16.6.0",
    "jest": "^29.2.0",
    "jest-extended": "^3.1.0",
    "json-schema-to-typescript": "^11.0.1",
    "jsonc-parser": "^3.2.0",
    "node-fetch": "^3.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.1"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
