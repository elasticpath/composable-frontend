{
  "name": "composable-cli",
  "version": "0.5.4",
  "description": "Elastic Path Commerce Cloud Schematics - CLI",
  "repository": {
    "type": "git",
    "directory": "packages/composable-cli"
  },
  "bin": {
    "composable-cli": "./bin/composable.js"
  },
  "scripts": {
    "build": "rimraf ./dist/ && yarn mkdirp dist && tsup",
    "dev": "tsup --watch",
    "dev-old": "ncc build ./composable.ts -w -o dist/",
    "build-old": "rimraf ./dist/ && ncc build ./composable.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@angular-devkit/core": "^14.1.0",
    "@angular-devkit/schematics": "^14.1.0",
    "@elasticpath/d2c-schematics": "*",
    "ansi-colors": "4.1.3",
    "inquirer": "8.2.4",
    "symbol-observable": "4.0.0",
    "typescript": "^4.7.4",
    "yargs-parser": "21.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^29.1.2",
    "@types/yargs-parser": "^21.0.0",
    "@vercel/ncc": "^0.34.0",
    "esbuild-plugin-copy": "^2.1.0",
    "fs-extra": "^10.1.0",
    "jest": "^29.2.0",
    "json-schema-to-typescript": "^11.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.1"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
