{
  // test comment
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // TODO remove this when we fix the js-sdk
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
  },
  "include": [
    "src/**/*", "example/**/*", ".storybook/**/*"]
}